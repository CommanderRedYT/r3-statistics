{
  "name": "r3-statistics",
  "version": "1.0.0",
  "main": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "yarn run dev:ensure-db && tsx watch src/index.ts",
    "dev:ensure-db": "bash -c 'if ! nc -z localhost 38123; then yarn run dev:db; else echo \"Database is already running\"; fi'",
    "dev:db": "docker-compose -f ./docker-compose.yml up -d clickhouse",
    "dev:db:down": "docker-compose -f ./docker-compose.yml down"
  },
  "devDependencies": {
    "@types/node": "^24",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@clickhouse/client": "^1.12.1",
    "dotenv": "^17.2.3"
  }
}
